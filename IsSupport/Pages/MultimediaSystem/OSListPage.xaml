<Page x:Class="IsSupport.Pages.MultimediaSystem.OSListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IsSupport.Pages.MultimediaSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OSListPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Button Name="BtnAddOS" Click="BtnAddOS_Click" Content="Добавить" Style="{StaticResource ButtonStatusCartridg}" Margin="0,10,0,0"/>
        </StackPanel>
        <DataGrid Name="DgrListOS" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование ОС" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Разярдность ОС" Binding="{Binding BitDepth}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
