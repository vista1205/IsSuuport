<Page x:Class="IsSupport.Pages.MultimediaSystem.TypeComponentAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IsSupport.Pages.MultimediaSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Тип компонента: Добавление/Редактирование" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Наименование нового компонента" Style="{DynamicResource MaterialDesignTextBlock}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="TbTitleTypeComponet" Text="{Binding Title}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="2" VerticalContentAlignment="Center" Grid.Column="1"/>
        <Button x:Name="BtnAddTypeComponent" Click="BtnAddTypeComponent_Click" Content="Сохранить" Width="150" Grid.Row="1"/>
        <Button x:Name="BtnCancel" Content="Отмена" Click="BtnCancel_Click" Width="150" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
