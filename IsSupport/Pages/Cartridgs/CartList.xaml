<Page x:Class="IsSupport.Pages.Cartridgs.CartList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IsSupport.Pages.Cartridgs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CartList">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" Grid.Row="0">
            <Menu>
                <MenuItem Name="ListCartHouseMenu" Click="ListCartHouseMenu_Click" Header="Склад"/>
                <MenuItem Name="ListCartIssueMenu" Click="ListCartIssueMenu_Click" Header="Выданы"/>
                <MenuItem Name="ListCartWaitingMenu" Click="ListCartWaitingMenu_Click" Header="Ожидают заправку"/>
                <MenuItem Name="ListCartКefuelMenu" Click="ListCartКefuelMenu_Click" Header="На заправке"/>
            </Menu>
        </WrapPanel>
        <Frame x:Name="MyFrameCartList" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
